{
  "name": "@accordproject/cicero-core",
  "version": "0.8.0",
  "description": "Cicero Core - implementation of Accord Protocol Template Specification",
  "engines": {
    "node": ">=8",
    "npm": ">=3"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "umd"
  ],
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.config.js --mode production",
    "prepublishOnly": "npm run build",
    "prepare": "nearleyc ./lib/tdl.ne -o ./lib/tdl.js && node scripts/nunjucks-precompile.js",
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "test": "mocha && nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/accordproject/cicero.git"
  },
  "keywords": [
    "accord",
    "cicero",
    "smart",
    "contract"
  ],
  "author": "accordproject.org",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/accordproject/cicero/issues"
  },
  "homepage": "https://github.com/accordproject/cicero#readme",
  "devDependencies": {
    "archiver": "2.1.1",
    "chai": "3.5.0",
    "chai-as-promised": "6.0.0",
    "chai-things": "0.2.0",
    "eslint": "4.19.1",
    "license-check": "1.1.5",
    "mocha": "5.1.1",
    "nyc": "11.7.2",
    "raw-loader": "^0.5.1",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "@accordproject/ergo-compiler": "0.4.4",
    "axios": "0.17.1",
    "composer-concerto": "0.31.2",
    "debug": "2.6.2",
    "fast-safe-stringify": "2.0.5",
    "glob": "7.1.2",
    "ietf-language-tag-regex": "0.0.5",
    "jsome": "2.5.0",
    "json-stable-stringify": "1.0.1",
    "jszip": "3.1.5",
    "minimatch": "3.0.4",
    "moo": "0.4.3",
    "nearley": "2.13.0",
    "node-cache": "4.2.0",
    "nunjucks": "3.1.2",
    "request": "2.87.0",
    "request-promise-native": "1.0.5",
    "semver": "5.5.0",
    "triple-beam": "1.3.0",
    "uuid": "3.2.1",
    "winston": "3.0.0",
    "xregexp": "4.1.1"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./test/data/**/*",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*",
      "!./lib/tdl.js",
      "!./lib/compiled_template.js",
      "!./umd/cicero.js"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  },
  "nyc": {
    "produce-source-map": "true",
    "sourceMap": "inline",
    "reporter": [
      "lcov",
      "text-summary",
      "html",
      "json"
    ],
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "lib/tdl.js",
      "scripts/**/*.js",
      "lib/compiled_template.js"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 88,
    "branches": 76,
    "functions": 84,
    "lines": 88
  }
}